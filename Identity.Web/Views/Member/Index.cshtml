@{
    ViewData["Title"] = "Index";
}
@model UserVM

<div class="row" >

    <div class="col-md-6 offset-md-3 text-center">
     <user-picture class="rounded" style="width:300px" image="@Model.Picture"></user-picture>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3" >
        <h1>User information</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.Phone</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>