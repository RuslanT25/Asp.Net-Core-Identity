@using Microsoft.AspNetCore.Authorization

@{
    ViewData["Title"] = "Index";
}

@inject IAuthorizationService authorizationService;

@{
    var authResultOrderRead = await authorizationService.AuthorizeAsync(User, "Permissions.Order.Read");
    var authResultOrderDelete = await authorizationService.AuthorizeAsync(User, "Permissions.Order.Delete");
    var authResultStockDelete = await authorizationService.AuthorizeAsync(User, "Permissions.Stock.Delete");
}

@if (authResultOrderRead.Succeeded)
{
    <button class="btn btn-primary">Permissions.Order.Read</button>
}

@if (authResultOrderDelete.Succeeded)
{
    <button class="btn btn-primary">Permissions.Order.Delete</button>
}

@if (authResultStockDelete.Succeeded)
{
    <button class="btn btn-primary">Permissions.Stock.Delete</button>
}